generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id          Int      @id @default(autoincrement())
  description String
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  votes    Vote[]
  sessions Session[]

  @@map("stories")
}

model Vote {
  id        Int      @id @default(autoincrement())
  storyId   Int      @map("story_id")
  voterName String   @map("voter_name")
  voteValue String   @map("vote_value")
  createdAt DateTime @default(now()) @map("created_at")

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, voterName])
  @@map("votes")
}

model Session {
  id         Int      @id @default(autoincrement())
  storyId    Int      @map("story_id")
  isRevealed Boolean  @default(false) @map("is_revealed")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId])
  @@map("sessions")
}

model RetroMeeting {
  id          Int        @id @default(autoincrement())
  isActive    Boolean    @default(true) @map("is_active")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  columns RetroColumn[]
  items   RetroItem[]

  @@map("retro_meetings")
}

model RetroColumn {
  id            Int         @id @default(autoincrement())
  retroMeetingId Int        @map("retro_meeting_id")
  title         String
  order         Int         @default(0)
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  retroMeeting RetroMeeting @relation(fields: [retroMeetingId], references: [id], onDelete: Cascade)
  items        RetroItem[]

  @@map("retro_columns")
}

model RetroItem {
  id            Int         @id @default(autoincrement())
  retroMeetingId Int        @map("retro_meeting_id")
  columnId      Int         @map("column_id")
  content       String
  authorName    String      @map("author_name")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  retroMeeting RetroMeeting @relation(fields: [retroMeetingId], references: [id], onDelete: Cascade)
  column       RetroColumn  @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@map("retro_items")
}

