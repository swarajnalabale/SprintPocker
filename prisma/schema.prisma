generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model PokerSession {
  id          Int      @id @default(autoincrement())
  sessionId   String   @unique @map("session_id")
  adminToken  String   @map("admin_token")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  stories Story[]

  @@map("poker_sessions")
}

model Story {
  id            Int      @id @default(autoincrement())
  pokerSessionId Int?    @map("poker_session_id")
  description   String
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  pokerSession PokerSession? @relation(fields: [pokerSessionId], references: [id], onDelete: Cascade)
  votes        Vote[]
  sessions     Session[]

  @@map("stories")
}

model Vote {
  id        Int      @id @default(autoincrement())
  storyId   Int      @map("story_id")
  voterName String   @map("voter_name")
  voteValue String   @map("vote_value")
  createdAt DateTime @default(now()) @map("created_at")

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, voterName])
  @@map("votes")
}

model Session {
  id         Int      @id @default(autoincrement())
  storyId    Int      @map("story_id")
  isRevealed Boolean  @default(false) @map("is_revealed")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId])
  @@map("sessions")
}

model RetroSession {
  id          Int      @id @default(autoincrement())
  sessionId   String   @unique @map("session_id")
  adminToken  String   @map("admin_token")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  meetings RetroMeeting[]

  @@map("retro_sessions")
}

model RetroMeeting {
  id            Int        @id @default(autoincrement())
  retroSessionId Int?      @map("retro_session_id")
  title         String     @default("ðŸ”„ Retro Meeting")
  isActive      Boolean    @default(true) @map("is_active")
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  retroSession RetroSession? @relation(fields: [retroSessionId], references: [id], onDelete: Cascade)
  columns      RetroColumn[]
  items        RetroItem[]

  @@map("retro_meetings")
}

model RetroColumn {
  id            Int         @id @default(autoincrement())
  retroMeetingId Int        @map("retro_meeting_id")
  title         String
  order         Int         @default(0)
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  retroMeeting RetroMeeting @relation(fields: [retroMeetingId], references: [id], onDelete: Cascade)
  items        RetroItem[]

  @@map("retro_columns")
}

model RetroItem {
  id            Int         @id @default(autoincrement())
  retroMeetingId Int        @map("retro_meeting_id")
  columnId      Int         @map("column_id")
  content       String
  authorName    String      @map("author_name")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  retroMeeting RetroMeeting @relation(fields: [retroMeetingId], references: [id], onDelete: Cascade)
  column       RetroColumn  @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@map("retro_items")
}

